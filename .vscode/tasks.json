{
  "tasks": [
    {
      "type": "shell",
      "label": "cmake",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "cmake",
      "args": ["..", "-DCMAKE_BUILD_TYPE=Debug"]
    },
    {
      "type": "shell",
      "label": "make",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "cmake",
      "args": ["--build", "."],
      "dependsOn": ["cmake"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
