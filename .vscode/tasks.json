{
  "tasks": [
    {
      "type": "shell",
      "label": "cmake",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "cmake",
      "osx": {
        "args": [
          "..",
          "-DCMAKE_LIBRARY_PATH='/usr/local/Cellar/boost/1.72.0_1/lib'",
          "-DCMAKE_INCLUDE_PATH='/usr/local/Cellar/boost/1.72.0_1/include'"
        ]
      },
      "windows": {
        "args": [
          "..",
          "-DCMAKE_LIBRARY_PATH='C:/LLVM/extra/boost/lib'",
          "-DCMAKE_INCLUDE_PATH='C:/LLVM/extra/boost/include/boost-1_72'"
        ]
      }
    },
    {
      "type": "shell",
      "label": "make",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "osx": {
        "command": "make"
      },
      "windows": {
        "command": "cmake",
        "args": ["--build", "."]
      },
      "dependsOn": ["cmake"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
